<com.osfans.trime.KeyboardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:trime="http://schemas.android.com/apk/res/com.osfans.trime"

        android:id="@+id/keyboard"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/keyboard_background"

        trime:keyBackground="@drawable/key"
        trime:keyPreviewLayout="@layout/keyboard_key_preview"
        trime:keyTextColor="@android:color/white"
        trime:keyPreviewOffset="-12dip"
        trime:keyPreviewHeight="80dip"
        trime:labelTextSize="@dimen/label_text_size"
        trime:keyTextSize="@dimen/key_text_size"
        trime:verticalCorrection="-10dip"
        trime:shadowColor="#BB000000"
        trime:shadowRadius="2.75"
        trime:popupLayout="@layout/keyboard_popup_keyboard"
        />
