<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/ime_name">

    <PreferenceCategory
        android:key="pref_ui"
        android:title="@string/pref_ui">
        <CheckBoxPreference
            android:key="pref_vibrate"
            android:title="@string/pref_vibrate_title"
            android:persistent="true"/>

        <CheckBoxPreference
            android:key="pref_sound"
            android:title="@string/pref_sound_title"
            android:persistent="true"/>

        <CheckBoxPreference
            android:key="pref_keyboard_preview"
            android:title="@string/pref_keyboard_preview_title"
            android:defaultValue="true"
            android:persistent="true"/>

        <ListPreference
            android:key="pref_cand_font_size"
            android:defaultValue="22"
            android:title="@string/pref_cand_font_size"
            android:entries="@array/pref_cand_font_size_values"
            android:entryValues="@array/pref_cand_font_size_values" />

        <ListPreference
            android:key="pref_key_font_size"
            android:defaultValue="22"
            android:title="@string/pref_key_font_size"
            android:entries="@array/pref_cand_font_size_values"
            android:entryValues="@array/pref_cand_font_size_values" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_function"
        android:title="@string/pref_function">

        <CheckBoxPreference
            android:key="pref_commit_py"
            android:title="@string/pref_commit_py_title"
            android:summary="@string/pref_commit_py_summary"
            android:persistent="true"/>

        <CheckBoxPreference
            android:key="pref_embed_first"
            android:title="@string/pref_embed_first"
            android:defaultValue="false"
            android:persistent="true"/>

    </PreferenceCategory>


    <Preference
        android:key="pref_licensing"
        android:title="@string/pref_licensing"
        android:persistent="false"/>

</PreferenceScreen>
